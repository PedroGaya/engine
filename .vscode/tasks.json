{
    "tasks": [
        {
            "type": "shell",
            "label": "Build Core",
            "windows": {
                "command": "make"
            },
            "linux": {
                "command": "make"
            },
            "options": {
                "cwd": "${workspaceFolder}/build/core"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Build Testbed",
            "windows": {
                "command": "make"
            },
            "linux": {
                "command": "make"
            },
            "options": {
                "cwd": "${workspaceFolder}/build/testbed"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Build Everything",
            "windows": {
                "command": "cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
            },
            "linux": {
                "command": "cmake -DCMAKE_BUILD_TYPE=Debug .. && make",
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ],
    "version": "2.0.0"
}